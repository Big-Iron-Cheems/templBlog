package views

templ notFound() {
	<div class="text-center">
		<h1 class="text-4xl font-bold dark:text-slate-200">404 - Page Not Found</h1>
		<p class="dark:text-slate-400">Sorry, the page you are looking for does not exist.</p>
		<a href="/" class="text-blue-500 dark:text-blue-300 underline">Go back to the homepage</a>
	</div>
}

// NotFound is the component for the 404 page.
templ NotFound() {
	@Layout(notFound())
}
